<h1 class="my-4 text-center">Lista de Livros</h1>

<div class="row mb-4">
  <div class="col-md-6 offset-md-3">
    <%= form_with(url: books_path, method: :get, local: true, class: "d-flex") do |form| %>
      <%= form.text_field :search, placeholder: "Buscar livros...", class: "form-control me-2" %>
      <%= form.submit "Buscar", class: "btn btn-outline-primary" %>
    <% end %>
  </div>
</div>

<% if flash[:alert] %>
  <div class="row mb-3">
    <div class="col-md-6 offset-md-3">
      <div class="alert alert-warning text-center" role="alert">
        <%= flash[:alert] %>
      </div>
    </div>
  </div>
<% end %>

<div class="table-responsive">
  <table id="books-table" class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Título</th>
        <th>Autor</th>
        <th>Editora</th>
        <th>Ano</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr class="<%= Loan.livro_emprestado?(book) ? "table-danger" : "table-success" %>">
          <td><%= book.title %></td>
          <td><%= book.actor %></td>
          <td><%= book.editora %></td>
          <td><%= book.ano_public %></td>
          <td class="d-flex gap-1">
            <%= link_to "Empréstimo", new_book_loan_path(book), class: "btn btn-sm btn-primary" %>
<%#para poder aparecer certos buttons para determinados user definimos que o botão de editar ira aparecer para somente admin%>
            <% if policy(book).update? %>
              <%= link_to "Editar", edit_book_path(book), class: "btn btn-sm btn-secondary" %>
            <% end %>
<%#Agora quando um usuario que não e admin e entra no perfil ele ira ver apenas os buttons de emprestimo, não de editar o livro e excluir%>
<%if policy(book).destroy?%>
            <%= form_with(model: book, method: :delete, local: true, class: "d-inline") do |form| %>
              <%= form.submit "Excluir", class: "btn btn-sm btn-danger", data: { confirm: "Tem certeza?" } %>
            <% end %>
<%end%>

          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= render "signed" %>

<%# Metodo para adicionar Livro %>
<div class="mt-4 text-center">
  <% if policy(Book).create? %>
    <%= link_to "Adicionar Novo Livro", new_book_path, class: "btn btn-primary" %>
  <% end %>
</div>
